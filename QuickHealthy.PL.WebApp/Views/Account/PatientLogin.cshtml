@model QuickHealthy.PL.WebApp.Models.PatientLoginViewModel

<a asp-action="PatientRegister" asp-controller="Account">Регистрация</a>

<form asp-action="PatientLogin" asp-controller="Account">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Username">Введите username: </label>
            <input type="text" asp-for="Username" />
            <span asp-validation-for="Username" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Введите password: </label>
            <input asp-for="Password" />
            <span asp-validation-for="Password" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
