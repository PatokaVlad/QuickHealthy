@model QuickHealthy.PL.WebApp.Models.DoctorLoginViewModel

<form asp-action="DoctorLogin" asp-controller="Account" asp-anti-forgery="true">
    <div class="validation" asp-validation-summary="ModelOnly"></div>
    <div>
        <div class="form-group">
            <label asp-for="Id">Введите id: </label>
            <input asp-for="Id" />
            <span asp-validation-for="Id" />
        </div>
        <div class="form-group">
            <input type="submit" value="Войти" class="btn btn-outline-dark" />
        </div>
    </div>
</form>
