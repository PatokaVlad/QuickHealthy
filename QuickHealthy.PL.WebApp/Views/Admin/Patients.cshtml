@inject QuickHealthy.BLL.Interfaces.IPatientService _patientService
@inject AutoMapper.IMapper _mapper

@{
    var patients = _mapper.Map<IEnumerable<QuickHealthy.PL.Models.PatientViewModel>>(_patientService.GetAll());
}

<table class="table">
    <thead>
        <tr><th>Id</th><th>First name</th><th>Last name</th><th>Birth date</th><th>City of birth</th><th>Medical card id</th></tr>
    </thead>


    <tbody>
        @foreach (var patient in patients)
        {
            <tr>
                <td>
                    @patient.Id
                </td>
                <td>
                    @patient.FirstName
                </td>
                <td>
                    @patient.LastName
                </td>
                <td>
                    @patient.BirthDate
                </td>
                <td>
                    @patient.CityOfBirth
                </td>
                <td>
                    @patient.MedicalCardId
                </td>
            </tr>
        }
    </tbody>
</table>