@model QuickHealthy.PL.Models.AppointmentViewModel

@inject QuickHealthy.BLL.Interfaces.IDoctorService _doctorService

<form asp-action="MakeAnAppointment" asp-controller="Patient">
    <div>
        <div class="form-group">
            <label asp-for="DoctorFirstName">Choose the doctor first name:</label>
            <select type="text" asp-for="DoctorFirstName">
                @foreach (var doctor in _doctorService.GetAll())
                {
                    <option>@doctor.FirstName</option>
                }
            </select>
            <span asp-validation-for="DoctorFirstName" />
        </div>
        <div class="form-group">
            <label asp-for="DoctorLastName">Choose the doctor last name:</label>
            <select type="text" asp-for="DoctorLastName">
                @foreach (var doctor in _doctorService.GetAll())
                {
                    <option>@doctor.LastName</option>
                }
            </select>
            <span asp-validation-for="DoctorLastName" />
        </div>
        <div class="form-group">
            <label asp-for="DoctorJobPosition">Choose the doctor job position:</label>
            <select type="text" asp-for="DoctorJobPosition">
                @foreach (var doctor in _doctorService.GetAll())
                {
                    <option>@doctor.JobPosition</option>
                }
            </select>
            <span asp-validation-for="DoctorJobPosition" />
        </div>
        <div class="form-group">
            <label asp-for="Date">Введите date</label>
            <input type="date" value="now" asp-for="Date" />
            <span asp-validation-for="Date" />
        </div>
        <div class="form-group">
            <label asp-for="Time">Введите time</label>
            <input type="time" value="now" asp-for="Time" />
            <span asp-validation-for="Time" />
        </div>
        <input type="submit" value="Submit">
    </div>
</form>