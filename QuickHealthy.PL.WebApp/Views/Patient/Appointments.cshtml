@model dynamic

<table class="table">
    <thead>
        <tr><th>Id</th><th>Doctor first name</th><th>Doctor last name</th><th>Doctor job position</th><th>Diagnosis</th><th>Date</th><th>Time</th></tr>
    </thead>
    <tbody>
        @foreach (var appointment in Model)
        {
        <tr>
            <td>@appointment.Id</td>
            <td>@appointment.DoctorFirstName</td>
            <td>@appointment.DoctorLastName</td>
            <td>@appointment.DoctorJobPosition</td>
            <td>@appointment.Diagnosis</td>
            <td>@appointment.Date.ToString("dd.MM.yyyy")</td>
            <td>@appointment.Time.ToString("hh:mm")</td>
        </tr>
        }
    </tbody>
</table>

